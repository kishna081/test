<struts>
 <constant name="struts.devMode" value="true"/>
 <package name="com.internousdev.ecsite_kishi.action" extends="struts-default">

<!-- HomeAction -->
<action name="HomeAction" class="com.internousdev.ecsite_kishi.action.HomeAction"  method="execute">
  <result name="success">buyItem.jsp</result>
  <result name="login">login.jsp</result>
</action>


<!-- GoHomeAction -->
<action name="GoHomeAction" class="com.internousdev.ecsite_kishi.action.GoHomeAction" method="execute">
  <result name="success">home.jsp</result>
</action>


<!-- LoginAction -->
<action name="LoginAction" class="com.internousdev.ecsite_kishi.action.LoginAction" method="execute">
  <result name="success">buyItem.jsp</result>
  <result name="error">login.jsp</result>
</action>

<!-- UserCreateAction -->
<action name="UserCreateAction" class="com.internousdev.ecsite_kishi.action.UserCreateAction" method="execute">
  <result name="success">userCreate.jsp</result>
</action>


<!-- UserCreateConfirmAction -->
<action name="UserCreateConfirmAction" class="com.internousdev.ecsite_kishi.action.UserCreateConfirmAction" method="execute">
  <result name="success">userCreateConfirm.jsp</result>
  <result name="error">userCreate.jsp</result>
</action>

<!-- UserCreateCompleteAction -->
<action name="UserCreateCompleteAction" class="com.internousdev.ecsite_kishi.action.UserCreateCompleteAction" method="execute">
  <result name="success">userCreateComplete.jsp</result>
</action>


<!-- BuyItemAction -->
<action name="BuyItemAction" class="com.internousdev.ecsite_kishi.action.BuyItemAction" method="execute">
  <result name="success">buyItemConfirm.jsp</result>
</action>


<!-- BuyItemComfirmAction -->
<action name="BuyItemConfirmAction" class="com.internousdev.ecsite_kishi.action.BuyItemConfirmAction" method="execute">
  <result name="success">buyItemComplete.jsp</result>

</action>

<!-- MyPageAction -->
<action name="MyPageAction" class="com.internousdev.ecsite_kishi.action.MyPageAction" method="execute">
  <result name="success">myPage.jsp</result>
</action>

<!-- LogoutAction -->
<action name="LogoutAction" class="com.internousdev.ecsite_kishi.action.LogoutAction" method="execute">
  <result name="success">logout.jsp</result>
</action>

<!-- ★ItemCreateAction -->
<action name="ItemCreateAction" class="com.internousdev.ecsite_kishi.action.ItemCreateAction" method="execute">
  <result name="success">itemCreate.jsp</result>
</action>

<!-- ★ItemCreateConfirmAction -->
<action name="ItemCreateConfirmAction" class="com.internousdev.ecsite_kishi.action.ItemCreateConfirmAction" method="execute">
  <result name="success">itemCreateConfirm.jsp</result>
  <result name="error">itemCreate.jsp</result>
</action>

<!-- ★ItemCreateCompleteAction -->
<action name="ItemCreateCompleteAction" class="com.internousdev.ecsite_kishi.action.ItemCreateCompleteAction" method="execute">
  <result name="success">itemCreateComplete.jsp</result>
  <result name="error">itemCreate.jsp</result>
</action>

</package>
</struts>
